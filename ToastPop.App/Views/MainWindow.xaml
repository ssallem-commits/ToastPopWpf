<Window
    x:Class="ToastPop.App.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:ToastPop.App.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:ToastPop.App.ViewModels"
    xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
    Title="ToastPop"
    Width="1200"
    Height="800"
    MinWidth="800"
    MinHeight="600"
    Background="{DynamicResource WindowBackgroundBrush}"
    ShowInTaskbar="{Binding ShowInTaskbar}"
    WindowStartupLocation="CenterScreen"
    WindowState="{Binding WindowState}"
    mc:Ignorable="d">

    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>

    <Window.Resources>
        <!--  Tab Item Style  -->
        <Style x:Key="BrowserTabItemStyle" TargetType="TabItem">
            <Setter Property="Padding" Value="12,6" />
            <Setter Property="Background" Value="{DynamicResource TabBackgroundBrush}" />
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border
                            x:Name="Border"
                            Margin="2,0,0,0"
                            Padding="{TemplateBinding Padding}"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="1,1,1,0"
                            CornerRadius="4,4,0,0">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <!--  Favicon  -->
                                <Image
                                    Grid.Column="0"
                                    Width="16"
                                    Height="16"
                                    Margin="0,0,8,0"
                                    Source="{Binding Favicon}" />

                                <!--  Title  -->
                                <TextBlock
                                    Grid.Column="1"
                                    MaxWidth="150"
                                    VerticalAlignment="Center"
                                    Text="{Binding Title}"
                                    TextTrimming="CharacterEllipsis" />

                                <!--  Close Button  -->
                                <Button
                                    Grid.Column="2"
                                    Width="18"
                                    Height="18"
                                    Margin="8,0,0,0"
                                    Padding="0"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Command="{Binding CloseCommand}"
                                    Content="âœ•"
                                    Cursor="Hand"
                                    FontSize="10"
                                    Visibility="{Binding IsCloseable, Converter={StaticResource BoolToVisibilityConverter}}" />
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="{DynamicResource TabSelectedBackgroundBrush}" />
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="{DynamicResource TabHoverBackgroundBrush}" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  Tab Header with New Tab Button  -->
        <DockPanel Grid.Row="0" Background="{DynamicResource HeaderBackgroundBrush}">
            <!--  New Tab Button  -->
            <Button
                Width="32"
                Height="32"
                Margin="4"
                Background="Transparent"
                BorderThickness="0"
                Command="{Binding NewTabCommand}"
                Content="+"
                Cursor="Hand"
                DockPanel.Dock="Right"
                FontSize="16"
                ToolTip="ìƒˆ íƒ­ ì—´ê¸°" />

            <!--  Tab Control  -->
            <TabControl
                x:Name="BrowserTabs"
                Background="Transparent"
                BorderThickness="0"
                ItemContainerStyle="{StaticResource BrowserTabItemStyle}"
                ItemsSource="{Binding Tabs}"
                SelectedItem="{Binding SelectedTab}">
                <TabControl.ContentTemplate>
                    <DataTemplate>
                        <Grid>
                            <!--  Address Bar  -->
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <!--  Navigation Bar  -->
                            <Border
                                Grid.Row="0"
                                Padding="8"
                                Background="{DynamicResource NavigationBarBackgroundBrush}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <!--  Back  -->
                                    <Button
                                        Grid.Column="0"
                                        Width="32"
                                        Height="32"
                                        Margin="0,0,4,0"
                                        Command="{Binding GoBackCommand}"
                                        Content="â—€"
                                        IsEnabled="{Binding CanGoBack}"
                                        ToolTip="ë’¤ë¡œ" />

                                    <!--  Forward  -->
                                    <Button
                                        Grid.Column="1"
                                        Width="32"
                                        Height="32"
                                        Margin="0,0,4,0"
                                        Command="{Binding GoForwardCommand}"
                                        Content="â–¶"
                                        IsEnabled="{Binding CanGoForward}"
                                        ToolTip="ì•žìœ¼ë¡œ" />

                                    <!--  Refresh  -->
                                    <Button
                                        Grid.Column="2"
                                        Width="32"
                                        Height="32"
                                        Margin="0,0,4,0"
                                        Command="{Binding RefreshCommand}"
                                        Content="âŸ³"
                                        ToolTip="ìƒˆë¡œê³ ì¹¨" />

                                    <!--  Home  -->
                                    <Button
                                        Grid.Column="3"
                                        Width="32"
                                        Height="32"
                                        Margin="0,0,8,0"
                                        Command="{Binding GoHomeCommand}"
                                        Content="ðŸ "
                                        ToolTip="í™ˆ" />

                                    <!--  Address Box  -->
                                    <Border
                                        Grid.Column="4"
                                        Background="{DynamicResource TextBoxBackgroundBrush}"
                                        BorderBrush="{DynamicResource BorderBrush}"
                                        BorderThickness="1"
                                        CornerRadius="4">
                                        <TextBox
                                            Padding="8,6"
                                            VerticalContentAlignment="Center"
                                            Background="Transparent"
                                            BorderThickness="0"
                                            Text="{Binding CurrentUrl, UpdateSourceTrigger=PropertyChanged}">
                                            <TextBox.InputBindings>
                                                <KeyBinding
                                                    Key="Return"
                                                    Command="{Binding NavigateCommand}"
                                                    CommandParameter="{Binding CurrentUrl}" />
                                            </TextBox.InputBindings>
                                        </TextBox>
                                    </Border>

                                    <!--  Go Button  -->
                                    <Button
                                        Grid.Column="5"
                                        Width="32"
                                        Height="32"
                                        Margin="8,0,0,0"
                                        Command="{Binding NavigateCommand}"
                                        CommandParameter="{Binding CurrentUrl}"
                                        Content="1â†’1"
                                        ToolTip="ì´ë™" />
                                </Grid>
                            </Border>

                            <!--  WebView2 Browser  -->
                            <controls:WebViewHost
                                x:Name="WebViewHost"
                                Grid.Row="1"
                                Background="Red"
                                TabViewModel="{Binding}" />
                        </Grid>
                    </DataTemplate>
                </TabControl.ContentTemplate>
            </TabControl>
        </DockPanel>

        <!--  Main Content Area (Hidden Browser for background tasks)  -->
        <Grid Grid.Row="1" Visibility="Collapsed">
            <wv2:WebView2 x:Name="BackgroundWebView" />
        </Grid>

        <!--  Status Bar  -->
        <Border
            Grid.Row="2"
            Padding="8,4"
            Background="{DynamicResource StatusBarBackgroundBrush}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBlock
                    Grid.Column="0"
                    VerticalAlignment="Center"
                    Foreground="{DynamicResource StatusTextBrush}"
                    Text="{Binding StatusMessage}" />

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <TextBlock Foreground="{DynamicResource StatusTextBrush}" Text="íƒ­: " />
                    <TextBlock Foreground="{DynamicResource StatusTextBrush}" Text="{Binding Tabs.Count}" />
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
